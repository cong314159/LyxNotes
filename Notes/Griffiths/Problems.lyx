\begin_layout Standard
First let 
\begin_inset Formula $h=f+g$
\end_inset

:
\begin_inset Formula 
\[
\braket{(f+g)|\hat{{Q}}(f+g)}=\braket{\hat{{Q}}(f+g)|(f+g)}
\]

\end_inset


\begin_inset Formula 
\[
\braket{f|\hat{{Q}}f}+\braket{f|\hat{{Q}}g}+\braket{g|\hat{{Q}}f}+\braket{g|\hat{{Q}}g}=\braket{\hat{{Q}}f|f}+\braket{\hat{{Q}}f|g}+\braket{\hat{{Q}}g|f}+\braket{\hat{{Q}}g|g}
\]

\end_inset


\end_layout

\begin_layout Standard
Then let 
\begin_inset Formula $h=f+ig$
\end_inset

:
\begin_inset Formula 
\[
\braket{(f+ig)|\hat{{Q}}(f+ig)}=\braket{\hat{{Q}}(f+ig)|(f+ig)}
\]

\end_inset


\begin_inset Formula 
\[
\braket{f|\hat{{Q}}f}+i\braket{f|\hat{{Q}}g}-i\braket{g|\hat{{Q}}f}+\braket{g|\hat{{Q}}g}=\braket{\hat{{Q}}f|f}+i\braket{\hat{{Q}}f|g}-i\braket{\hat{{Q}}g|f}+\braket{\hat{{Q}}g|g}
\]

\end_inset


\end_layout

\begin_layout Standard
It is given that 
\begin_inset Formula $\braket{h|\hat{{Q}}h}=\braket{\hat{{Q}}h|h}$
\end_inset

, then:
\begin_inset Formula 
\[
\braket{f|\hat{{Q}}f}+\braket{g|\hat{{Q}}g}=\braket{\hat{{Q}}f|f}+\braket{\hat{{Q}}g|g}
\]

\end_inset


\end_layout

\begin_layout Standard
Then:
\begin_inset Formula 
\[
\left\{ \begin{array}{c}
\braket{f|\hat{{Q}}g}+\braket{g|\hat{{Q}}f}=\braket{\hat{{Q}}f|g}+\braket{\hat{{Q}}g|f}\\
i\braket{f|\hat{{Q}}g}-i\braket{g|\hat{{Q}}f}=i\braket{\hat{{Q}}f|g}-i\braket{\hat{{Q}}g|f}
\end{array}\right.
\]

\end_inset


\end_layout

\begin_layout Standard
Multiply the bottom equation by 
\begin_inset Formula $i$
\end_inset

:
\begin_inset Formula 
\[
\left\{ \begin{array}{c}
\braket{f|\hat{{Q}}g}+\braket{g|\hat{{Q}}f}=\braket{\hat{{Q}}f|g}+\braket{\hat{{Q}}g|f}\\
-\braket{f|\hat{{Q}}g}+\braket{g|\hat{{Q}}f}=-\braket{\hat{{Q}}f|g}+\braket{\hat{{Q}}g|f}
\end{array}\right.
\]

\end_inset


\end_layout

\begin_layout Standard
Add top equation minus bottom equation:
\begin_inset Formula 
\[
\braket{f|\hat{{Q}}g}=\braket{\hat{{Q}}f|g}
\]

\end_inset


\end_layout

