\begin_inset Formula 
\begin{align}
\hat{P}_{D} & \exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\nonumber \\
 & =\hat{P}_{D}\exp\left[-\frac{i}{2}\lambda^{\prime}\hat{P}_{D}\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\label{eq:PD_U_chiral}
\end{align}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Similarly, 
\begin_inset Formula 
\begin{align}
\hat{P}_{A} & \exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\nonumber \\
 & =\hat{P}_{A}\exp\left[\frac{i}{2}\lambda\hat{P}_{A}\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\label{eq:PA_U_chiral}
\end{align}

\end_inset


\end_layout

\begin_layout Itemize
Also, we can show that
\begin_inset Formula 
\begin{align}
\hat{U}^{\dagger}\hat{P}_{D} & =\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\hat{P}_{D}\nonumber \\
 & =\exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[\frac{i}{2}\lambda^{\prime}\hat{P}_{D}\hat{\sigma}_{y}\right]\hat{P}_{D}\label{eq:Ud_PD_chiral}
\end{align}

\end_inset

and
\begin_inset Formula 
\begin{align}
\hat{U}^{\dagger}\hat{P}_{A} & =\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\hat{P}_{A}\nonumber \\
 & =\exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[-\frac{i}{2}\lambda\hat{P}_{A}\hat{\sigma}_{y}\right]\hat{P}_{A}\label{eq:Ud_PA_chiral}
\end{align}

\end_inset


\end_layout

\begin_layout Itemize
Thus, we can use (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:PD_U_chiral"

\end_inset

)-(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:Ud_PA_chiral"

\end_inset

) to write
\begin_inset Formula 
\begin{align*}
\hat{U}^{\dagger}\hat{H}_{e}\hat{U} & =\hat{U}^{\dagger}\left(\varepsilon_{D}\hat{P}_{D}+\varepsilon_{A}\hat{P}_{A}\right)\hat{U}\\
 & =\varepsilon_{D}\hat{U}^{\dagger}\hat{P}_{D}\hat{U}+\varepsilon_{A}\hat{U}^{\dagger}\hat{P}_{A}\hat{U}\\
 & =\varepsilon_{D}\exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[\frac{i}{2}\lambda^{\prime}\hat{P}_{D}\hat{\sigma}_{y}\right]\hat{P}_{D}\exp\left[-\frac{i}{2}\lambda^{\prime}\hat{P}_{D}\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\\
 & \quad+\varepsilon_{A}\exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[-\frac{i}{2}\lambda\hat{P}_{A}\hat{\sigma}_{y}\right]\hat{P}_{A}\exp\left[\frac{i}{2}\lambda\hat{P}_{A}\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\left(\hat{b}^{\dagger}-\hat{b}\right)\right]\\
 & =\varepsilon_{D}\hat{P}_{D}+\varepsilon_{A}\hat{P}_{A}\\
 & =\hat{H}_{e}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The polaron transform leaves an operator 
\begin_inset Formula $\alpha\hat{P}_{D}+\beta\hat{P}_{A}$
\end_inset

 invariant
\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Next, transform 
\begin_inset Formula $\hat{H}_{o}$
\end_inset

 as 
\begin_inset Formula $\hat{U}^{\dagger}\hat{H}_{o}\hat{U}$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\hat{U}^{\dagger}\hat{H}_{o}\hat{U} & =\hat{U}^{\dagger}\left(-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}\right)\hat{U}\\
 & =\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(-\hat{b}^{\dagger}+\hat{b}\right)\right]\exp\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\\
 & \quad\times\left(-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}\right)\exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)\left(\hat{b}^{\dagger}-\hat{b}\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Consider 
\begin_inset Formula $\hat{\sigma}_{x}\exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\hat{\sigma}_{x} & \exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\\
 & =\hat{\sigma}_{x}\left(\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]^{k}\right)\\
 & =\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\right]^{k}\hat{\sigma}_{x}\left(\hat{\sigma}_{y}\right)^{k}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Now, evaluate 
\begin_inset Formula $\hat{\sigma}_{x}\left(\hat{\sigma}_{y}\right)^{k}$
\end_inset

, starting with the identity
\begin_inset Formula $\hat{\sigma}_{x}\hat{\sigma}_{y}=-\hat{\sigma}_{y}\hat{\sigma}_{x}$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\hat{\sigma}_{x}\left(\hat{\sigma}_{y}\right)^{k} & =\left(-1\right)\left(\hat{\sigma}_{y}\hat{\sigma}_{x}\right)\left(\hat{\sigma}_{y}\right)^{k-2}\\
 & =\left(-1\right)^{2}\left(\hat{\sigma}_{y}\right)^{2}\hat{\sigma}_{x}\left(\hat{\sigma}_{y}\right)^{k-2}=\cdots\\
 & =\left(-1\right)^{k}\left(\hat{\sigma}_{y}\right)^{k}\hat{\sigma}_{x}
\end{align*}

\end_inset

 
\end_layout

\begin_layout Itemize
Thus,
\begin_inset Formula 
\begin{align*}
\hat{\sigma}_{x} & \exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\\
 & =\left(\sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]^{k}\right)\hat{\sigma}_{x}\\
 & =\exp\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\hat{\sigma}_{x}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Similarly, consider 
\begin_inset Formula $\hat{\sigma}_{z}\exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Use 
\begin_inset Formula $\hat{\sigma}_{z}\hat{\sigma}_{y}=-i\hat{\sigma}_{x}$
\end_inset

 and 
\begin_inset Formula $\hat{\sigma}_{y}\hat{\sigma}_{z}=i\hat{\sigma}_{x}$
\end_inset

 to write
\begin_inset Formula 
\[
\hat{\sigma}_{z}\hat{\sigma}_{y}=-\hat{\sigma}_{y}\hat{\sigma}_{z}
\]

\end_inset

so that
\begin_inset Formula 
\[
\hat{\sigma}_{z}\hat{\sigma}_{y}^{k}=\left(-1\right)\hat{\sigma}_{y}\hat{\sigma}_{z}\hat{\sigma}_{y}^{k-1}=\left(-1\right)^{2}\hat{\sigma}_{y}^{2}\hat{\sigma}_{z}\hat{\sigma}_{y}^{k-2}=\cdots=\left(-1\right)^{k}\hat{\sigma}_{y}^{k}\hat{\sigma}_{z}
\]

\end_inset


\end_layout

\begin_layout Itemize
Therefore
\begin_inset Formula 
\begin{align*}
\hat{\sigma}_{z} & \exp\left[-\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\\
 & =\left(\sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]^{k}\right)\hat{\sigma}_{z}\\
 & =\exp\left[\frac{i}{2}\left(\lambda^{\prime}\hat{P}_{D}-\lambda\hat{P}_{A}\right)\hat{\sigma}_{y}\right]\hat{\sigma}_{z}
\end{align*}

\end_inset


\end_layout

\end_deeper
\end_deeper
\end_deeper
\begin_layout Section
Dynamics of Open Systems
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\mathcal{H}_{S}$
\end_inset

 be the Hilbert space of the system 
\begin_inset Formula $S$
\end_inset

; 
\begin_inset Formula $\mathcal{H}_{B}$
\end_inset

 be the Hilbert space of the environment 
\begin_inset Formula $B$
\end_inset


\end_layout

\begin_layout Itemize
Total Hilbert space: 
\begin_inset Formula $\mathcal{H}=\mathcal{H}_{S}\otimes\mathcal{H}_{B}$
\end_inset


\end_layout

\begin_layout Itemize
Total Hamiltonian
\begin_inset Formula 
\[
\hat{H}\left(t\right)=\hat{H}_{S}\otimes\hat{I}_{B}+\hat{I}_{S}\otimes\hat{H}_{B}+\hat{H}_{I}\left(t\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
We are concerned with the time evolution of 
\begin_inset Formula $S$
\end_inset

, so we get a reduced density matrix for the system by tracing over the
 degrees of freedom of the environment:
\begin_inset Formula 
\[
\hat{\rho}_{S}\left(t\right)=\mbox{tr}_{B}\,\left\{ \hat{U}\left(t,t_{0}\right)\hat{\rho}\left(t_{0}\right)\hat{U}^{\dagger}\left(t,t_{0}\right)\right\} 
\]

\end_inset

or, equivalently,
\begin_inset Formula 
\[
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{i}{\hbar}\text{tr}\,\left[\hat{H}\left(t\right),\hat{\rho}\left(t\right)\right]
\]

\end_inset


\end_layout

\begin_layout Subsection
Quantum Dynamical Semigroups
\end_layout

\begin_layout Itemize
Dynamical maps
\end_layout

\begin_deeper
\begin_layout Itemize
Prepare the initial state
\begin_inset Formula 
\[
\hat{\rho}\left(0\right)=\hat{\rho}_{S}\left(0\right)\otimes\hat{\rho}_{B}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Initial system state 
\begin_inset Formula $\hat{\rho}_{S}$
\end_inset

 
\end_layout

\begin_layout Itemize
Environment state 
\begin_inset Formula $\hat{\rho}_{B}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $\hat{V}\left(t\right)$
\end_inset

 be a transformation descrbing the change of the reduced system at time
 
\begin_inset Formula $t=0$
\end_inset

 to some time 
\begin_inset Formula $t>0$
\end_inset

:
\begin_inset Formula 
\begin{equation}
\hat{\rho}_{S}\left(0\right)\mapsto\hat{\rho}_{S}\left(t\right)=\hat{V}\left(t\right)\hat{\rho}_{S}\left(0\right)\equiv\text{tr}_{B}\,\left\{ \hat{U}\left(t,0\right)\hat{\rho}_{S}\left(0\right)\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)\right\} \label{eq:DynamicalMap}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\hat{\rho}_{B}$
\end_inset

 be constant
\end_layout

\end_deeper
\begin_layout Itemize
Equation(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:DynamicalMap"

\end_inset

) is a dynamical map that describes the change of the open system, mapping
 the space 
\begin_inset Formula $S\left(\mathcal{H}_{S}\right)$
\end_inset

 to itself: 
\begin_inset Formula $S\left(\mathcal{H}_{S}\right)\rightarrow S\left(\mathcal{H}_{S}\right)$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Dynamical maps can be characterized using only operators acting on 
\begin_inset Formula $\mathcal{H}_{S}$
\end_inset


\end_layout

\begin_layout Itemize
Define transition operators
\begin_inset Formula 
\[
\hat{P}_{jk}\equiv\ket{j}\bra{k}
\]

\end_inset


\end_layout

\begin_layout Itemize
The density matrix 
\begin_inset Formula $\hat{\rho}_{B}$
\end_inset

 has spectral decomposition
\begin_inset Formula 
\[
\hat{\rho}_{B}=\sum_{\alpha}\lambda_{\alpha}\hat{P}_{\alpha}
\]

\end_inset

where 
\begin_inset Formula $\left\{ \ket{\alpha}\right\} $
\end_inset

 form an orthonormal basis for 
\begin_inset Formula $\mathcal{H}_{B}$
\end_inset

 and 
\begin_inset Formula $\lambda_{\alpha}$
\end_inset

 are non-negative real numbers satisfying 
\begin_inset Formula $\sum_{\alpha}\lambda_{\alpha}=1$
\end_inset


\end_layout

\begin_layout Itemize
They dynamical map may be written in the form
\begin_inset Formula 
\begin{align}
\hat{V}\left(t\right)\hat{\rho}_{S}\left(0\right) & \equiv\text{tr}_{B}\,\left\{ \hat{U}\left(t,0\right)\hat{\rho}_{S}\left(0\right)\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)\right\} \nonumber \\
 & =\sum_{\alpha}\Braket{\alpha|\hat{U}\left(t,0\right)\hat{\rho}_{S}\left(0\right)\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)|\alpha}\nonumber \\
 & =\sum_{\alpha}\Braket{\alpha|\hat{U}\left(t,0\right)\hat{\rho}_{S}\left(0\right)\left(\sum_{\beta}\lambda_{\beta}\ket{\beta}\bra{\beta}\right)\hat{U}^{\dagger}\left(t,0\right)|\alpha}\nonumber \\
 & =\sum_{\alpha,\beta}\left(\sqrt{\lambda_{\beta}}\Braket{\alpha|\hat{U}\left(t,0\right)|\beta}\right)\hat{\rho}_{S}\left(0\right)\left(\sqrt{\lambda_{\beta}}\Braket{\beta|\hat{U}^{\dagger}\left(t,0\right)|\alpha}\right)\nonumber \\
 & =\sum_{\alpha,\beta}\hat{W}_{\alpha\beta}\hat{\rho}_{S}\left(0\right)\hat{W}_{\alpha\beta}^{\dagger}\label{eq:DynamicalMapKrausLikeForm}
\end{align}

\end_inset

with
\begin_inset Formula 
\[
\hat{W}_{\alpha\beta}\equiv\sqrt{\lambda_{\beta}}\Braket{\alpha|\hat{U}\left(t,0\right)|\beta}
\]

\end_inset


\end_layout

\begin_layout Itemize
Now:
\begin_inset Formula 
\begin{align*}
\sum_{\alpha,\beta}\hat{W}_{\alpha\beta}^{\dagger}\hat{W}_{\alpha\beta} & =\sum_{\alpha,\beta}\Braket{\beta|\hat{U}^{\dagger}\left(t,0\right)|\alpha}\Braket{\alpha|\hat{U}\left(t,0\right)|\beta}\\
 & =\sum_{\beta}\Bra{\beta}\hat{U}^{\dagger}\left(t,0\right)\left(\sum_{\alpha}\ket{\alpha}\bra{\alpha}\right)\hat{U}\left(t,0\right)\Ket{\beta}\\
 & =\sum_{\beta}\Bra{\beta}\hat{U}^{\dagger}\left(t,0\right)\hat{U}\left(t,0\right)\Ket{\beta}=\sum_{\beta}\Bra{\beta}\Ket{\beta}=\hat{I}_{S}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Thus:
\begin_inset Formula 
\[
\mbox{tr}_{S}\,\left\{ \hat{V}\left(t\right)\hat{\rho}_{S}\left(0\right)\right\} =\mbox{tr}_{S}\,\left(\sum_{\alpha,\beta}\hat{W}_{\alpha\beta}^{\dagger}\hat{W}_{\alpha\beta}\hat{\rho}_{S}\left(0\right)\right)=\mbox{tr}_{S}\,\left(\hat{\rho}_{S}\left(0\right)\right)=1
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The dynamical map 
\begin_inset Formula $\hat{V}\left(t\right)$
\end_inset

 is:
\end_layout

\begin_deeper
\begin_layout Itemize
Convex-linear
\end_layout

\begin_layout Itemize
completely positive
\end_layout

\begin_layout Itemize
trace-preserving
\end_layout

\end_deeper
\end_deeper
\end_deeper
\begin_layout Itemize
If we let 
\begin_inset Formula $t$
\end_inset

 vary, we get a one-parameter family 
\begin_inset Formula $\left\{ V\left(t\right)|t\geq0\right\} $
\end_inset

 of dynamical maps with 
\begin_inset Formula $V\left(0\right)=\hat{I}_{S}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
If the characteristic time scales over which the reservoir correlation functions
 decay are smaller than the characteristic time scale of system evolution,
 we can neglect memory effects in the system
\end_layout

\begin_layout Itemize
Semi-group property
\begin_inset Formula 
\begin{equation}
V\left(t_{1}\right)V\left(t_{2}\right)=V\left(t_{1}+t_{2}\right),\quad t_{1},t_{2}\geq0\label{eq:SemigroupProperty}
\end{equation}

\end_inset


\end_layout

\end_deeper
\begin_layout Subsection
The Markovian Master Equation
\end_layout

\begin_layout Itemize
For a quantum dynamical semigroup, there is a linear map 
\begin_inset Formula $\mathcal{L}$
\end_inset

, the generator of the semigroup, which allows us to represent the semigroup
 in exponential form
\begin_inset Formula 
\begin{equation}
\hat{V}\left(t\right)=\exp\left(\mathcal{L}t\right)\label{eq:SemigroupGenerator}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Now take the derivative of the dynamical map (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:DynamicalMap"

\end_inset

):
\begin_inset Formula 
\begin{align}
\frac{d}{dt}\left(\hat{\rho}_{S}\left(t\right)\right) & =\frac{d}{dt}\left(\hat{V}\left(t\right)\hat{\rho}_{S}\left(0\right)\right)=\frac{d}{dt}\left(\exp\left(\mathcal{L}t\right)\hat{\rho}_{S}\left(0\right)\right)\nonumber \\
 & =\mathcal{L}\exp\left(\mathcal{L}t\right)\hat{\rho}_{S}\left(0\right)=\mathcal{L}\hat{\rho}_{S}\left(t\right)\label{eq:SemiGroupDifferential}
\end{align}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\mathcal{L}$
\end_inset

 is called a superoperator and is a generalization of the Liouville super-operat
or 
\end_layout

\end_deeper
\begin_layout Itemize
Construct the most general form of 
\begin_inset Formula $\mathcal{L}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Itemize
In a finite-dimensional Hilbert space 
\begin_inset Formula $\mathcal{H}_{S}$
\end_inset

 of dimension 
\begin_inset Formula $N$
\end_inset


\end_layout

\begin_layout Itemize
The Liouville space is a complex space of dimension 
\begin_inset Formula $N^{2}$
\end_inset


\end_layout

\begin_layout Itemize
Choose orthonormal operators 
\begin_inset Formula $F_{i}$
\end_inset

, with 
\begin_inset Formula $i\in\left\{ 1,2,\ldots,N^{2}\right\} $
\end_inset

 satisfying
\begin_inset Formula 
\[
\left(F_{i},F_{j}\right)\equiv\text{tr}_{S}\,\left\{ F_{i}^{\dagger}F_{j}\right\} =\delta_{ij}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
One operator, 
\begin_inset Formula $F_{N^{2}}$
\end_inset

 is chosen to be proportional to the identity
\begin_inset Formula 
\[
F_{N^{2}}=\sqrt{\frac{1}{N}}\hat{I}_{S}
\]

\end_inset


\end_layout

\begin_layout Itemize
The remaining 
\begin_inset Formula $N^{2}-1$
\end_inset

 operators are traceless
\end_layout

\begin_layout Itemize
The 
\begin_inset Formula $\left\{ F_{i}\right\} $
\end_inset

 form a complete basis for the Liouville space
\end_layout

\end_deeper
\begin_layout Itemize
An operator 
\begin_inset Formula $W_{\alpha\beta}\left(t\right)$
\end_inset

 may be decomposed as
\begin_inset Formula 
\[
W_{\alpha\beta}\left(t\right)=\sum_{i=1}^{N^{2}}F_{i}\left(F_{i},W_{\alpha\beta}\left(t\right)\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Write the dynamical map (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:DynamicalMap"

\end_inset

) as
\begin_inset Formula 
\begin{align*}
\hat{\rho}_{S}\left(t\right) & =\sum_{\alpha,\beta}\hat{W}_{\alpha\beta}\hat{\rho}_{S}\left(0\right)\hat{W}_{\alpha\beta}^{\dagger}\\
 & =\sum_{\alpha,\beta}\left(\sum_{i=1}^{N^{2}}F_{i}\left(F_{i},W_{\alpha\beta}\left(t\right)\right)\right)\hat{\rho}_{S}\left(0\right)\left(\sum_{j=1}^{N^{2}}F_{j}\left(F_{j},W_{\alpha\beta}\left(t\right)\right)^{\ast}\right)\\
 & =\sum_{i,j=1}^{N^{2}}\left(\sum_{\alpha,\beta}\left(F_{i},W_{\alpha\beta}\left(t\right)\right)\left(F_{j},W_{\alpha\beta}\left(t\right)\right)^{\ast}\right)F_{i}\hat{\rho}_{S}\left(0\right)F_{j}\\
 & =\sum_{i,j=1}^{N^{2}}c_{i,j}F_{i}\hat{\rho}_{S}\left(0\right)F_{j}
\end{align*}

\end_inset

with
\begin_inset Formula 
\[
c_{ij}=\sum_{\alpha,\beta}\left(F_{i},W_{\alpha\beta}\left(t\right)\right)\left(F_{j},W_{\alpha\beta}\left(t\right)\right)^{\ast}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The matrix 
\begin_inset Formula $c=\left(c_{ij}\right)$
\end_inset

 is Hermitian adjoint
\end_layout

\end_deeper
\begin_layout Itemize
For some complex, vector 
\begin_inset Formula $v\in\mathbb{C}^{N^{2}}$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\sum_{ij}c_{ij}v_{i}^{\ast}v_{j} & =\sum_{ij}\left(\sum_{\alpha,\beta}\left(F_{i},W_{\alpha\beta}\left(t\right)\right)\left(F_{j},W_{\alpha\beta}\left(t\right)\right)^{\ast}\right)v_{i}^{\ast}v_{j}\\
 & =\sum_{\alpha,\beta}\sum_{ij}\left(\hat{F}_{i},W_{\alpha\beta}\left(t\right)\right)\left(\hat{F}_{j},W_{\alpha\beta}\left(t\right)\right)^{\ast}v_{i}^{\ast}v_{j}\\
 & =\sum_{\alpha,\beta}\sum_{i}\left|\left(v_{i}\hat{F}_{i},W_{\alpha\beta}\left(t\right)\right)\right|^{2}\geq0
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The book says that this proves that 
\begin_inset Formula $c\geq0$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Since
\begin_inset Formula 
\[
V\left(t\right)=\sum_{k=0}^{\infty}\frac{1}{k!}\mathcal{L}^{k}t^{k}=\hat{I}_{S}+\mathcal{L}t+\frac{1}{2}\mathcal{L}^{2}t^{2}+\cdots\frac{1}{k!}\mathcal{L}^{k}t^{k}+\cdots
\]

\end_inset


\end_layout

\begin_layout Itemize
Then, for 
\begin_inset Formula $t=\epsilon$
\end_inset

 for some small 
\begin_inset Formula $\epsilon$
\end_inset

, we have to first order
\begin_inset Formula 
\[
V\left(\epsilon\right)\simeq\hat{I}_{S}+\mathcal{L}\epsilon
\]

\end_inset


\end_layout

\begin_layout Itemize
Apply this to 
\begin_inset Formula $\hat{\rho}_{S}$
\end_inset

:
\begin_inset Formula 
\[
V\left(\epsilon\right)\hat{\rho}_{S}=\hat{I}_{S}\hat{\rho}_{S}+\mathcal{L}\epsilon\hat{\rho}_{S}
\]

\end_inset

so that
\begin_inset Formula 
\begin{align*}
\mathcal{L}\hat{\rho}_{S} & =\lim_{\epsilon\rightarrow0}\frac{1}{\epsilon}\left(V\left(\epsilon\right)\hat{\rho}_{S}-\hat{\rho}_{S}\right)\\
 & =\lim_{\epsilon\rightarrow0}\Bigg\{\frac{1}{N}\frac{c_{N^{2}N^{2}}\left(\epsilon\right)-N}{\epsilon}\hat{\rho}_{S}+\frac{1}{\sqrt{N}}\sum_{i=1}^{N^{2}-1}\left(\frac{c_{iN^{2}}\left(\epsilon\right)}{\epsilon}\hat{F}_{i}\hat{\rho}_{S}+\frac{c_{N^{2}i}\left(\epsilon\right)}{\epsilon}\hat{\rho}_{S}\hat{F}_{i}^{\dagger}\right)\\
 & \qquad+\sum_{i,j=1}^{N^{2}-1}\frac{c_{ij}\left(\epsilon\right)}{\epsilon}\hat{F}_{i}\hat{\rho}_{S}\hat{F}_{j}^{\dagger}\Bigg\}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Define coefficients
\begin_inset Formula 
\begin{align*}
a_{N^{2}N^{2}} & =\lim_{\epsilon\rightarrow0}\frac{c_{N^{2}N^{2}}\left(\epsilon\right)-N}{\epsilon}\\
a_{iN^{2}} & =\lim_{\epsilon\rightarrow0}\frac{c_{iN^{2}}\left(\epsilon\right)}{\epsilon},\quad i=1,\ldots,N^{2}-1,\\
a_{ij} & =\lim_{\epsilon\rightarrow0}\frac{c_{ij}\left(\epsilon\right)}{\epsilon},\quad i,j=1,\ldots,N^{2}-1
\end{align*}

\end_inset

and the quantities
\begin_inset Formula 
\[
\hat{F}=\sum_{i=1}^{N^{2}-1}a_{iN^{2}}\hat{F}_{i}
\]

\end_inset

and
\begin_inset Formula 
\[
G=\frac{1}{2N}a_{N^{2}N^{2}}I_{S}+\frac{1}{2}\left(\hat{F}^{\dagger}+\hat{F}\right)
\]

\end_inset

 as well as the Hermitian operator
\begin_inset Formula 
\[
\hat{H}=\frac{1}{2i}\left(\hat{F}^{\dagger}-\hat{F}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Write 
\begin_inset Formula $\mathcal{L}\hat{\rho}_{S}$
\end_inset

 in terms of 
\begin_inset Formula $\hat{H}$
\end_inset

, 
\begin_inset Formula $\hat{G}$
\end_inset

, 
\begin_inset Formula $\hat{F}$
\end_inset

:
\begin_inset Formula 
\[
\mathcal{L}\hat{\rho}_{S}=-\frac{i}{\hbar}\left[\hat{H},\hat{\rho}_{S}\right]+\left\{ G,\hat{\rho}_{S}\right\} +\sum_{i,j=1}^{N^{2}-1}a_{ij}F_{i}\hat{\rho}_{S}F_{j}^{\dagger}
\]

\end_inset


\end_layout

\begin_layout Itemize
Since the semi-group is trace preserving, we expect that
\begin_inset Formula 
\begin{align*}
\frac{d}{dt}\left(\text{tr}\:\hat{\rho}_{S}\right) & =\text{tr}\,\left(\frac{d}{dt}\hat{\rho}_{S}\right)=\text{tr}\,\left(\mathcal{L}\hat{\rho}_{S}\right)\\
 & =\text{tr}_{S}\left\{ \left(2G+\sum_{i,j=1}^{N^{2}-1}a_{ij}F_{j}^{\dagger}F_{i}\right)\hat{\rho}_{S}\right\} \\
 & =0
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
For this to hold for arbitrary 
\begin_inset Formula $\hat{\rho}_{S}$
\end_inset

, we require
\begin_inset Formula 
\[
2G+\sum_{i,j=1}^{N^{2}-1}a_{ij}F_{j}^{\dagger}F_{i}=0
\]

\end_inset

which leads to
\begin_inset Formula 
\[
G=-\frac{1}{2}\sum_{i,j=1}^{N^{2}-1}a_{ij}F_{j}^{\dagger}F_{i}
\]

\end_inset

so that
\begin_inset Formula 
\[
\mathcal{L}\hat{\rho}_{S}=-\frac{i}{\hbar}\left[\hat{H},\hat{\rho}_{S}\right]+\sum_{i,j=1}^{N^{2}-1}a_{ij}\left(F_{i}\hat{\rho}_{S}F_{j}^{\dagger}-\frac{1}{2}\left\{ F_{j}^{\dagger}F_{i},\hat{\rho}_{S}\right\} \right)
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is the 
\series bold
first standard form
\series default
 of the generator
\end_layout

\begin_layout Itemize
Here, 
\begin_inset Formula $a=\left(a_{ij}\right)$
\end_inset

 is a Hermitian and positive matrix
\end_layout

\end_deeper
\begin_layout Itemize
Since the coefficeint matrix 
\begin_inset Formula $a$
\end_inset

 is positive, it may be diagonalized using an appropriate unitary transformation
:
\begin_inset Formula 
\[
uau^{\dagger}=\left[\begin{array}{cccc}
\gamma_{1}\\
 & \gamma_{2}\\
 &  & \ddots\\
 &  &  & \gamma_{N^{2}-1}
\end{array}\right]
\]

\end_inset

with non-negative eigenvalues 
\begin_inset Formula $\left\{ \gamma_{i}\right\} $
\end_inset


\end_layout

\begin_layout Itemize
Define new operators 
\begin_inset Formula $A_{k}$
\end_inset

:
\begin_inset Formula 
\[
F_{i}=\sum_{k=1}^{N^{2}-1}u_{ki}A_{k}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
The diagonal form of the generator is written as
\begin_inset Formula 
\[
\mathcal{L}\hat{\rho}_{S}=-\frac{i}{\hbar}\left[\hat{H},\hat{\rho}_{S}\right]+\sum_{k=1}^{N^{2}-1}\gamma_{k}\left(A_{k}\hat{\rho}_{S}A_{k}^{\dagger}-\frac{1}{2}\left\{ A_{k}^{\dagger}A_{k},\hat{\rho}_{S}\right\} \right)
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is the Lindblad equation
\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Quantum dynamical semigroups in the Heisenberg picture
\end_layout

\begin_deeper
\begin_layout Itemize
Characterize dynamical maps in the Heisenberg picture
\begin_inset Formula 
\begin{equation}
\text{tr}_{S}\,\left\{ A\left(V\left(t\right)\hat{\rho}_{S}\right)\right\} =\text{tr}_{S}\,\left\{ \left(V^{\dagger}\left(t\right)A\right)\hat{\rho}_{S}\right\} \label{eq:DynamicalMapHeisenbergPic}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
The one-parameter family of dynamical maps 
\begin_inset Formula $V\left(t\right)$
\end_inset

must be continuous
\end_layout

\begin_deeper
\begin_layout Itemize
Demand ultraweak continuity:
\begin_inset Formula 
\[
\lim_{\epsilon\rightarrow0}\text{tr}_{S}\left\{ \left(V^{\dagger}\left(\epsilon\right)A-A\right)\hat{\rho}_{S}\right\} =0
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Dynamical semigroups always are contracting:
\begin_inset Formula 
\[
\left\Vert V^{\dagger}\left(\epsilon\right)A\right\Vert _{1}\leq\left\Vert A\right\Vert _{1}
\]

\end_inset

where 
\begin_inset Formula $\left\Vert A\right\Vert _{1}=\text{tr}\,\left|A\right|$
\end_inset

 
\end_layout

\end_deeper
\begin_layout Itemize
The Dissipator 
\begin_inset Formula $\mathcal{D}$
\end_inset

:
\begin_inset Formula 
\[
\mathcal{D}\left(\hat{\rho}_{S}\right)=\sum_{k=1}^{N^{2}-1}\gamma_{k}\left(A_{k}\hat{\rho}_{S}A_{k}^{\dagger}-\frac{1}{2}\left\{ A_{k}^{\dagger}A_{k},\hat{\rho}_{S}\right\} \right)
\]

\end_inset

so that the Lindblad equation may be written
\begin_inset Formula 
\[
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{i}{\hbar}\left[\hat{H},\hat{\rho}_{S}\left(t\right)\right]+\mathcal{D}\left(\hat{\rho}_{S}\right)
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\hat{H}$
\end_inset

 is not necessarily the free Hamiltonian of the system 
\begin_inset Formula $S$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\hat{H}$
\end_inset

 may contain additional terms due to the coupling of the system with its
 environment
\end_layout

\end_deeper
\begin_layout Itemize
The generator 
\begin_inset Formula $\mathcal{L}$
\end_inset

 does not uniquely dtermine 
\begin_inset Formula $\hat{H}$
\end_inset

 and the operators 
\begin_inset Formula $A_{i}$
\end_inset


\end_layout

\begin_layout Itemize
The generator 
\begin_inset Formula $\mathcal{L}$
\end_inset

 is invariant under the following transformations:
\end_layout

\begin_deeper
\begin_layout Itemize
Unitary transformations of the Lindblad operators
\begin_inset Formula 
\[
\sqrt{\gamma_{i}}A_{i}\rightarrow\sqrt{\gamma_{i}^{\prime}}A_{i}^{\prime}=\sum_{j}u_{ij}\sqrt{\gamma_{j}}A_{j}
\]

\end_inset

 where 
\begin_inset Formula $u=\left(u_{ij}\right)$
\end_inset

 is a unitary matrix
\end_layout

\begin_layout Itemize
Inhomogeneous transformations
\begin_inset Formula 
\begin{align*}
A_{i}\longrightarrow A_{i}^{\prime} & =A_{i}+a_{i},\\
H\longrightarrow H^{\prime} & =H+\frac{1}{2i}\sum_{j}\gamma_{i}\left(a_{j}^{\ast}A_{j}-a_{j}A_{j}^{\dagger}\right)+b
\end{align*}

\end_inset

where 
\begin_inset Formula $a_{i}\in\mathbb{C}$
\end_inset

 and 
\begin_inset Formula $b\in\mathbb{R}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This means it is always possible to choose traceless 
\begin_inset Formula $\left\{ A_{i}\right\} $
\end_inset


\end_layout

\end_deeper
\end_deeper
\end_deeper
\begin_layout Itemize
Time-dependent Lindblad operators may be appropriate under external time-depende
nt fields affecting the system
\end_layout

\begin_deeper
\begin_layout Itemize
A generalized version of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:DynamicalMap"

\end_inset

):
\begin_inset Formula 
\[
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=\mathcal{L}\left(t\right)\hat{\rho}_{S}\left(t\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Define the time-dependent propagator 
\begin_inset Formula $V\left(t,t_{0}\right)$
\end_inset

:
\begin_inset Formula 
\[
V\left(t,t_{0}\right)=T_{\leftarrow}\exp\left(\int_{t_{0}}^{t}ds\,\mathcal{L}\left(s\right)\right)
\]

\end_inset

which satisfies
\begin_inset Formula 
\[
\frac{\partial}{\partial t}V\left(t,t_{0}\right)=\mathcal{L}\left(t\right)V\left(t,t_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Instead of the semigroup property of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:SemigroupProperty"

\end_inset

), we have
\begin_inset Formula 
\[
V\left(t,t_{1}\right)V\left(t_{1},t_{0}\right)=V\left(t,t_{0}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
The adjoint master equation
\end_layout

\begin_deeper
\begin_layout Itemize
Define for a Schrdinger-picture operator 
\begin_inset Formula $A$
\end_inset

 the Heisenberg operator 
\begin_inset Formula $A_{H}\left(t\right)$
\end_inset

 using (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:DynamicalMapHeisenbergPic"

\end_inset

)
\begin_inset Formula 
\[
\text{tr}_{S}\,\left\{ A\left(V\left(t\right)\hat{\rho}_{S}\right)\right\} =\text{tr}_{S}\,\left\{ \left(V^{\dagger}\left(t\right)A\right)\hat{\rho}_{S}\right\} =\text{tr}_{S}\,\left\{ A_{H}\left(t\right)\hat{\rho}_{S}\right\} 
\]

\end_inset

with the adjoint propagator
\begin_inset Formula 
\[
V^{\dagger}\left(t,t_{0}\right)=T_{\rightarrow}\exp\left(\int_{t_{0}}^{t}ds\,\mathcal{L}^{\dagger}\left(s\right)\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
The adjoint generator 
\begin_inset Formula $\mathcal{L}^{\dagger}$
\end_inset

 is defined by
\begin_inset Formula 
\[
\text{tr}_{S}\left\{ A\mathcal{L}\left(t\right)\hat{\rho}_{S}\right\} =\text{tr}_{S}\left\{ \left(\mathcal{L}^{\dagger}\left(t\right)A\right)\hat{\rho}_{S}\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
The adjoint propagator 
\begin_inset Formula $V^{\dagger}\left(t,t_{0}\right)$
\end_inset

 satisfies
\begin_inset Formula 
\[
\frac{\partial}{\partial t}V^{\dagger}\left(t,t_{0}\right)=V^{\dagger}\left(t,t_{0}\right)\mathcal{L}^{\dagger}\left(t\right)
\]

\end_inset

and describes the evolution of operators in the Heisenberg picture
\begin_inset Formula 
\[
A_{H}\left(t\right)=V^{\dagger}\left(t,0\right)A
\]

\end_inset


\end_layout

\begin_layout Itemize
Thus, the equation of motion for the Heisenberg operator 
\begin_inset Formula $\hat{A}_{H}\left(t\right)$
\end_inset

 is
\begin_inset Formula 
\begin{align*}
\frac{d}{dt} & A_{H}\left(t\right)\\
 & =\mathcal{L}^{\dagger}A_{H}\left(t\right)\\
 & =\frac{i}{\hbar}\left[\hat{H},A_{H}\left(t\right)\right]+\sum_{k}\gamma_{k}\left(A_{k}^{\dagger}A_{H}\left(t\right)A_{k}-\frac{1}{2}\left\{ A_{H}\left(t\right),A_{k}^{\dagger}A_{k}\right\} \right)
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Multi-time correlation functions
\end_layout

\begin_deeper
\begin_layout Itemize
Two-time correlation functions
\begin_inset Formula 
\[
g\left(t,s\right)=\Braket{B\left(t\right),C\left(s\right)}=\text{tr}_{S}\left\{ B_{H}\left(t\right)C_{H}\left(s\right)\hat{\rho}_{S}\left(0\right)\right\} 
\]

\end_inset

with 
\begin_inset Formula $t>s\geq0$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is equvalent to the Schrdinger picture expression:
\begin_inset Formula 
\[
g\left(t,s\right)=\mbox{tr}_{S}\left\{ BV\left(t,s\right)CV\left(s,0\right)\hat{\rho}_{S}\left(0\right)\right\} ,
\]

\end_inset


\end_layout

\begin_layout Itemize
Convention: superoperators act on anything rightward of them.
\end_layout

\begin_layout Itemize
The process here is:
\end_layout

\begin_deeper
\begin_layout Itemize
Propagate 
\begin_inset Formula $\hat{\rho}_{S}\left(0\right)$
\end_inset

 to 
\begin_inset Formula $\hat{\rho}_{S}\left(s\right)$
\end_inset

 and then measure with 
\begin_inset Formula $C$
\end_inset


\end_layout

\begin_layout Itemize
Propagate the measured state to 
\begin_inset Formula $\hat{\rho}_{S}\left(t\right)$
\end_inset

 and then measure with 
\begin_inset Formula $B$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
General form for a multi-time correlation function:
\begin_inset Formula 
\begin{align*}
g & \left(t_{1},t_{2},\ldots,t_{n};s_{1},s_{2},\ldots,s_{m}\right)\\
 & \equiv\Braket{B_{1}\left(s_{1}\right)B_{2}\left(s_{2}\right)\cdots B_{m}\left(s_{m}\right)C_{n}\left(t_{n}\right)\cdots C_{2}\left(t_{2}\right)C_{1}\left(t_{1}\right)}\\
 & =\text{tr}_{S}\,\left\{ C_{n}\left(t_{n}\right)\cdots C_{2}\left(t_{2}\right)C_{1}\left(t_{1}\right)\hat{\rho}_{S}\left(0\right)B_{1}\left(s_{1}\right)\cdots B_{2}\left(s_{2}\right)B_{m}\left(s_{m}\right)\right\} 
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Here, the 
\begin_inset Formula $B_{j}\left(s_{j}\right)$
\end_inset

, with 
\begin_inset Formula $j\in\left\{ 1,2,\ldots,m\right\} $
\end_inset

 and 
\begin_inset Formula $C_{i}\left(s_{i}\right)$
\end_inset

, with 
\begin_inset Formula $i\in\left\{ 1,2,\ldots,n\right\} $
\end_inset

 are arbitrary Heisenberg operators, and the 
\begin_inset Formula $s_{j}$
\end_inset

and 
\begin_inset Formula $t_{i}$
\end_inset

 are ordered such that
\begin_inset Formula 
\[
t_{n}>t_{n-1}>\cdots>t_{2}>t_{1}\geq0\quad\text{and}\quad s_{m}>s_{m-1}>\cdots>s_{2}>s_{1}\geq0
\]

\end_inset


\end_layout

\begin_layout Itemize
Order the time events as
\begin_inset Formula 
\[
r_{q}>r_{q-1}>\cdots>r_{1}\geq0
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Since it is possible for 
\begin_inset Formula $t_{i}=s_{j}$
\end_inset

 for some 
\begin_inset Formula $i,j$
\end_inset

 , there could be fewer than 
\begin_inset Formula $m+n$
\end_inset

 disticnt times.
\end_layout

\end_deeper
\begin_layout Itemize
Define super-operator 
\begin_inset Formula $\mathcal{F}_{l}$
\end_inset

:
\begin_inset Formula 
\[
\mathcal{F}_{l}\hat{\rho}=\begin{cases}
C_{i}\hat{\rho}, & r_{l}=t_{i}\neq s_{j}\quad\text{for some }i\,\text{and all }j,\\
\hat{\rho}B_{j}, & r_{l}=s_{j}\neq t_{i}\quad\text{for some }j\,\text{and all }i,\\
C_{i}\hat{\rho}B_{j}, & r_{l}=t_{i}=s_{j}\quad\text{for some }i\,\text{and }j
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Itemize
This allows for
\begin_inset Formula 
\begin{align*}
g & \left(t_{1},t_{2},\ldots,t_{n};s_{1},s_{2},\ldots,s_{m}\right)\\
 & =\text{tr}_{S}\,\left\{ \mathcal{F}_{q}V\left(r_{q},r_{q-1}\right)\mathcal{F}_{q-1}V\left(r_{q},r_{q-2}\right)\cdots\mathcal{F}_{1}V\left(r_{1},0\right)\hat{\rho}_{S}\left(0\right)\right\} 
\end{align*}

\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Dynamics of correlation functions
\end_layout

\begin_deeper
\begin_layout Itemize
For correlation function 
\begin_inset Formula $\Braket{B_{i}\left(t\right)}$
\end_inset

, we have the 
\series bold
quantum regression theorem
\series default
:
\begin_inset Formula 
\[
\frac{d}{d\tau}\braket{B_{i}\left(t+\tau,t\right)B_{l}\left(t\right)}=\sum_{j}G_{ij}\Braket{B_{j}\left(t+\tau\right)B_{l}\left(t\right)}
\]

\end_inset


\end_layout

\begin_layout Itemize
Proof:
\begin_inset Formula 
\[
\frac{d}{d\tau}\braket{B_{i}\left(t+\tau,t\right)B_{l}\left(t\right)}=\text{tr}_{S}\left\{ \left(\mathcal{L}^{\dagger}B_{l}\left(t\right)\right)\hat{\rho}_{S}\left(t\right)\right\} =\text{tr}_{S}\left\{ \left(\sum_{j}G_{ij}B_{j}\right)\hat{\rho}_{S}\left(t\right)\right\} 
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
For arbitrary 
\begin_inset Formula $\hat{\rho}_{S}\left(t\right)$
\end_inset

, this leads to
\begin_inset Formula 
\[
\mathcal{L}^{\dagger}B_{i}=\sum_{j}G_{ij}B_{j}
\]

\end_inset

so that
\begin_inset Formula 
\begin{align*}
\frac{d}{d\tau}\braket{B_{i}\left(t+\tau,t\right)B_{l}\left(t\right)} & =\text{tr}_{S}\left\{ \left(\mathcal{L}^{\dagger}B_{i}\left(t\right)\right)V\left(t+\tau,t\right)B_{l}\hat{\rho}_{S}\left(t\right)\right\} \\
 & =\sum_{j}G_{ij}\Braket{B_{j}\left(t+\tau\right)B_{l}\left(t\right)}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
This result will allow us to determine explicit expressions for correlation
 functions once a solution is knkown for mean values.
\end_layout

\end_deeper
\begin_layout Itemize
Irreversiblilty and entropy production
\end_layout

\begin_deeper
\begin_layout Itemize
Relative entropy
\begin_inset Formula 
\[
S\left(\hat{\rho}||\hat{\sigma}\right)\equiv\text{tr}\,\left\{ \hat{\rho}\ln\hat{\rho}\right\} -\text{tr}\,\left\{ \hat{\rho}\ln\hat{\sigma}\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $S\left(\hat{\rho}||\hat{\rho}_{0}\right)$
\end_inset

 be the relative entropy between two states 
\begin_inset Formula $\hat{\rho}$
\end_inset

 and 
\begin_inset Formula $\hat{\rho}_{0}$
\end_inset

 of the system 
\begin_inset Formula $S$
\end_inset

 described by 
\begin_inset Formula $V\left(t\right)$
\end_inset


\begin_inset Formula 
\begin{align*}
S\left(\hat{\rho}||\hat{\rho}_{0}\right) & =S\left(\mbox{tr}_{B}\left\{ \hat{U}\left(t,0\right)\hat{\rho}\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)\right\} ||\left\{ \hat{U}\left(t,0\right)\hat{\rho}_{0}\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)\right\} \right)\\
 & \leq S\left(\hat{U}\left(t,0\right)\hat{\rho}\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)||\hat{U}\left(t,0\right)\hat{\rho}_{0}\otimes\hat{\rho}_{B}\hat{U}^{\dagger}\left(t,0\right)\right)\\
 & =S\left(\hat{\rho}\otimes\hat{\rho}_{B}||\hat{\rho}_{0}\otimes\hat{\rho}_{B}\right)\\
 & =S\left(\hat{\rho}||\hat{\rho}_{0}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\hat{\rho}_{0}$
\end_inset

 be a stationary state of 
\begin_inset Formula $S$
\end_inset

 such that
\begin_inset Formula 
\[
V\left(t\right)\hat{\rho}_{0}=\hat{\rho}_{0}
\]

\end_inset


\end_layout

\begin_layout Itemize
Then, a dynamical map 
\begin_inset Formula $V\left(t\right)$
\end_inset

 decreases the relative entropy with respect to a stationary state:
\begin_inset Formula 
\[
S\left(V\left(t\right)\hat{\rho}||\hat{\rho}_{0}\right)\leq S\left(\hat{\rho}||\hat{\rho}_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $V\left(t\right)=\exp\left(\mathcal{L}t\right)$
\end_inset

, then the negative time derivative of the relative entropy is positive:
\begin_inset Formula 
\[
\sigma\left(\hat{\rho}\left(t\right)\right)=-\frac{d}{dt}S\left(\hat{\rho}\left(t\right)||\hat{\rho}_{0}\right)\geq0
\]

\end_inset

with
\begin_inset Formula 
\[
\hat{\rho}\left(t\right)=V\left(t\right)\hat{\rho}\left(0\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\sigma\left(\hat{\rho}\left(t\right)\right)$
\end_inset

 is a functional called the entropy production rate.
\end_layout

\end_deeper
\begin_layout Subsection
Microscopic Derivation of the Master Equation
\end_layout

\begin_layout Itemize
Begin with the Hamiltonian
\begin_inset Formula 
\[
\hat{H}=\hat{H}_{S}+\hat{H}_{B}+\hat{H}_{I}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Consider weak coupling
\end_layout

\end_deeper
\begin_layout Itemize
The derivation of the master equation is best done in the interaction picture.
\end_layout

\begin_layout Itemize
Start with the von Neumann equation
\begin_inset Formula 
\begin{equation}
\frac{d}{dt}\hat{\rho}\left(t\right)=-\frac{i}{\hbar}\left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(t\right)\right]\label{eq:VonNeumann}
\end{equation}

\end_inset

for the total density matrix and its integral form
\begin_inset Formula 
\begin{equation}
\hat{\rho}\left(t\right)=\hat{\rho}\left(0\right)-\frac{i}{\hbar}\int_{0}^{t}ds\,\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\label{eq:VonNeumannIntegral}
\end{equation}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Equations here are in the interaction picture
\end_layout

\end_deeper
\begin_layout Itemize
Combine (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:VonNeumann"

\end_inset

) and (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:VonNeumannIntegral"

\end_inset

) Trace over the degrees of freedom of the reservoir
\begin_inset Formula 
\begin{align*}
\frac{d}{dt}\hat{\rho}\left(t\right) & =-\frac{i}{\hbar}\left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(0\right)-\frac{i}{\hbar}\int_{0}^{t}ds\,\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]\\
 & =-\frac{i}{\hbar}\left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(0\right)\right]-\frac{1}{\hbar^{2}}\left[\hat{H}_{I}\left(t\right),\int_{0}^{t}ds\,\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]\\
 & =-\frac{i}{\hbar}\left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(0\right)\right]-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Take the trace of this:
\begin_inset Formula 
\begin{align*}
\text{tr}_{B}\left(\frac{d}{dt}\hat{\rho}\left(t\right)\right) & =\frac{d}{dt}\left(\text{tr}_{B}\hat{\rho}\left(t\right)\right)=\frac{d}{dt}\hat{\rho}_{S}\left(t\right)\\
 & =-\frac{i}{\hbar}\cancel{\text{tr}_{B}\left\{ \left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(0\right)\right]\right\} }-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]\right\} \\
 & =-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Thus, we have
\begin_inset Formula 
\begin{equation}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}\left(s\right)\right]\right]\right\} \label{eq:Derivative_of_System}
\end{equation}

\end_inset

under the assumption that
\begin_inset Formula 
\begin{equation}
\text{tr}_{B}\left\{ \left[\hat{H}_{I}\left(t\right),\hat{\rho}\left(0\right)\right]\right\} \label{eq:ZeroCommutatorAssumption}
\end{equation}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
We still have the full 
\begin_inset Formula $S+B$
\end_inset

 density matrix 
\begin_inset Formula $\hat{\rho}\left(s\right)$
\end_inset

 on the right-hand side of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:Derivative_of_System"

\end_inset

)
\end_layout

\begin_layout Itemize
To eliminate this, we first make the Born approximation:
\end_layout

\begin_deeper
\begin_layout Itemize
Weak coupling approximation.
 The coupling between the system and the reservoir is weak such that the
 influence of the system on the reservoir is small.
\end_layout

\begin_layout Itemize
The reservoir remains approximately in the initial state 
\begin_inset Formula $\hat{\rho}_{B}$
\end_inset


\end_layout

\begin_layout Itemize
The total system-reservoir system 
\begin_inset Formula $S+B$
\end_inset

 may be characterized as a product of system and reservoir matrices
\begin_inset Formula 
\begin{equation}
\hat{\rho}\left(t\right)=\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\label{eq:BornApproximation}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Under the Born approximation, we have
\begin_inset Formula 
\begin{equation}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}_{S}\left(s\right)\otimes\hat{\rho}_{B}\right]\right]\right\} \label{eq:Derivative_of_System_Born_Approx}
\end{equation}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Next, we make the Markov approximation
\end_layout

\begin_deeper
\begin_layout Itemize
This makes (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:Derivative_of_System_Born_Approx"

\end_inset

) time-local, since it is assumed 
\begin_inset Formula $\hat{\rho}\left(t\right)$
\end_inset

 is independent of 
\begin_inset Formula $\hat{\rho}\left(t^{\prime}\right)$
\end_inset

 for all 
\begin_inset Formula $t^{\prime}\neq t$
\end_inset


\begin_inset Formula 
\begin{equation}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{1}{\hbar^{2}}\int_{0}^{t}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(s\right),\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\right]\right]\right\} \label{eq:Derivative_of_System_RedfieldEquation}
\end{equation}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is called the 
\series bold
Redfield equation
\end_layout

\end_deeper
\begin_layout Itemize
The Redfield equation is time-local but not a master equation since it depends
 explicitly on the initial preparation of the reservoir
\end_layout

\end_deeper
\begin_layout Itemize
To achieve a master equation, let 
\begin_inset Formula $s\rightarrow t-s$
\end_inset

 so that
\begin_inset Formula 
\begin{equation}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right)=-\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(t-s\right),\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\right]\right]\right\} \label{eq:Derivative_of_System_BornMarkov}
\end{equation}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is the Born-Markov approximation, but it does not guarantee that this
 equation defines the generator of a dynamical semigroup.
\end_layout

\end_deeper
\begin_layout Itemize
Peform a secular apprxoimation which averages over the rapidly-oscillating
 terms of the master equation and is known as the rotating wave approximation
\end_layout

\begin_deeper
\begin_layout Itemize
Write 
\begin_inset Formula $\hat{H}_{I}$
\end_inset

 in the interaction picture in the form
\begin_inset Formula 
\begin{equation}
\hat{H}_{I}=\sum_{\alpha}\hat{A}_{\alpha}\otimes\hat{B}_{\alpha}\label{eq:SecularApproximation}
\end{equation}

\end_inset

with 
\begin_inset Formula 
\[
\hat{A}_{\alpha}=\hat{A}_{\alpha}^{\dagger}\quad\text{and}\quad\hat{B}_{\alpha}=\hat{B}_{\alpha}^{\dagger}
\]

\end_inset


\end_layout

\begin_layout Itemize
To achieve (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:SecularApproximation"

\end_inset

), we decompose the interaction-picture Hamiltonian 
\begin_inset Formula $\hat{H}_{I}$
\end_inset

 into eigenoperators of the system 
\begin_inset Formula $S$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Assume 
\begin_inset Formula $\hat{H}_{S}$
\end_inset

 has eigenvalues 
\begin_inset Formula $\left\{ \varepsilon\right\} $
\end_inset

 and eigenvectors 
\begin_inset Formula $\left\{ \ket{\varepsilon}\right\} $
\end_inset


\begin_inset Formula 
\[
\hat{H}_{S}\ket{\varepsilon}=\varepsilon\ket{\varepsilon}
\]

\end_inset


\end_layout

\begin_layout Itemize
Define projection operators
\begin_inset Formula 
\[
\hat{\Pi}\left(\varepsilon\right)=\hat{P}_{\varepsilon\varepsilon}=\ket{\varepsilon}\bra{\varepsilon}
\]

\end_inset


\end_layout

\begin_layout Itemize
Define operators
\begin_inset Formula 
\[
\hat{A}_{\alpha}\left(\omega\right)=\sum_{\varepsilon^{\prime}-\varepsilon=\omega}\hat{\Pi}\left(\varepsilon\right)\hat{A}_{\alpha}\hat{\Pi}\left(\varepsilon^{\prime}\right),
\]

\end_inset

where the sum over 
\begin_inset Formula $\omega$
\end_inset

 includes all eigenvalue pairs 
\begin_inset Formula $\left(\varepsilon,\varepsilon^{\prime}\right)$
\end_inset

 satisfying 
\begin_inset Formula $\varepsilon^{\prime}-\varepsilon=\omega$
\end_inset


\end_layout

\begin_layout Itemize
Thus, the following relations are satisfied
\begin_inset Formula 
\begin{align*}
\left[\hat{H}_{S},\hat{A}_{\alpha}\left(\omega\right)\right] & =-\omega\hat{A}_{\alpha}\left(\omega\right)\\
\left[\hat{H}_{S},\hat{A}_{\alpha}^{\dagger}\left(\omega\right)\right] & =\omega\hat{A}_{\alpha}^{\dagger}\left(\omega\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
The operators 
\begin_inset Formula $\hat{A}_{\alpha}\left(\omega\right)$
\end_inset

 and 
\begin_inset Formula $\hat{A}_{\alpha}^{\dagger}\left(\omega\right)$
\end_inset

 are said to be eigenoperators of 
\begin_inset Formula $\hat{H}_{S}$
\end_inset

 belonging to frequencies 
\begin_inset Formula $\pm\omega$
\end_inset

, respectively
\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
In the interaction picture, the eigenoperators of 
\begin_inset Formula $\hat{H}_{S}$
\end_inset

 take the form
\begin_inset Formula 
\begin{align*}
e^{i\hat{H}_{S}t}\hat{A}_{\alpha}\left(\omega\right)e^{-i\hat{H}_{S}t} & =e^{-i\omega t}\hat{A}_{\alpha}\left(\omega\right),\quad\text{and}\\
e^{i\hat{H}_{S}t}\hat{A}_{\alpha}^{\dagger}\left(\omega\right)e^{-i\hat{H}_{S}t} & =e^{+i\omega t}\hat{A}_{\alpha}^{\dagger}\left(\omega\right)
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The following commutator evaluates to zero:
\begin_inset Formula 
\[
\left[\hat{H}_{S},\hat{A}_{\alpha}^{\dagger}\left(\omega\right)\hat{A}_{\alpha}\left(\omega\right)\right]=0
\]

\end_inset

and
\begin_inset Formula 
\[
\hat{A}_{\alpha}^{\dagger}\left(\omega\right)=\hat{A}_{\alpha}\left(-\omega\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Sum over all energy differences and employ the completeness relation to
 get
\begin_inset Formula 
\[
\sum_{\omega}\hat{A}_{\alpha}\left(\omega\right)=\sum_{\omega}\hat{A}_{\alpha}^{\dagger}\left(\omega\right)=\hat{A}_{\alpha}
\]

\end_inset


\end_layout

\begin_layout Itemize
This allows us to write the interaction Hamiltonian (in the Schrdinger
 picture) as
\begin_inset Formula 
\[
\hat{H}_{I}=\sum_{\alpha,\omega}\hat{A}_{\alpha}\left(\omega\right)\otimes B_{\alpha}=\sum_{\alpha,\omega}\hat{A}_{\alpha}^{\dagger}\left(\omega\right)\otimes B_{\alpha}^{\dagger}
\]

\end_inset


\end_layout

\begin_layout Itemize
Thus, the interaction Hamiltonian in the interaction picture is
\begin_inset Formula 
\begin{align}
\hat{H}_{I}\left(t\right) & =e^{i\hat{H}_{S}t}\hat{H}_{I}e^{-i\hat{H}_{S}t}=\sum_{\alpha,\omega}e^{-i\omega t}\hat{A}_{\alpha}\left(\omega\right)\otimes B_{\alpha}\quad\text{or}\nonumber \\
 & =\sum_{\alpha,\omega}e^{+i\omega t}\hat{A}_{\alpha}^{\dagger}\left(\omega\right)\otimes B_{\alpha}^{\dagger}\left(t\right)\label{eq:InteractionPictureInteraction}
\end{align}

\end_inset

with interaction picture environment operators
\begin_inset Formula 
\[
B_{\alpha}\left(t\right)=e^{i\hat{H}_{B}t}B_{\alpha}e^{-i\hat{H}_{B}t}
\]

\end_inset


\end_layout

\begin_layout Itemize
We also find that
\begin_inset Formula 
\[
\Braket{B_{\alpha}\left(t\right)}\equiv\text{tr}\,\left\{ B_{\alpha}\left(t\right)\hat{\rho}_{B}\right\} =0
\]

\end_inset

which has the interpretation that the reservoir averages of 
\begin_inset Formula $B_{\alpha}\left(t\right)$
\end_inset

 vanish
\end_layout

\end_deeper
\begin_layout Itemize
Now, expand (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:Derivative_of_System_BornMarkov"

\end_inset

)
\begin_inset Formula 
\begin{align*}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right) & =-\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\left\{ \left[\hat{H}_{I}\left(t\right),\left[\hat{H}_{I}\left(t-s\right),\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\right]\right]\right\} \\
 & =-\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\left\{ \hat{H}_{I}\left(t\right)\left[\hat{H}_{I}\left(t-s\right),\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\right]-\left[\hat{H}_{I}\left(t-s\right),\hat{\rho}_{S}\left(t\right)\otimes\hat{\rho}_{B}\right]\hat{H}_{I}\left(t\right)\right\} \\
 & =-\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\hat{H}_{I}\left(t\right)\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}-\hat{H}_{I}\left(t\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t-s\right)\\
 & \quad\qquad\qquad\qquad-\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t\right)+\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t-s\right)\hat{H}_{I}\left(t\right)\bigg\}\\
 & =\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t\right)-\hat{H}_{I}\left(t\right)\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\\
 & \quad\qquad\qquad\qquad+\hat{H}_{I}\left(t\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t-s\right)-\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t-s\right)\hat{H}_{I}\left(t\right)\bigg\}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Note that
\begin_inset Formula 
\begin{align*}
\left(\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t\right)\right)^{\dagger} & =\hat{H}_{I}^{\dagger}\left(t\right)\hat{\rho}_{S}^{\dagger}\left(t\right)\hat{\rho}_{B}^{\dagger}\hat{H}_{I}^{\dagger}\left(t-s\right)\\
 & =\hat{H}_{I}\left(t\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t-s\right)
\end{align*}

\end_inset

so that we can simplify our expression to
\begin_inset Formula 
\begin{align}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right) & =\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t\right)-\hat{H}_{I}\left(t\right)\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\nonumber \\
 & \quad\qquad\qquad\qquad+\text{h.c.}\bigg\}\label{eq:Derivative_of_System_with_hc_01}
\end{align}

\end_inset

where 
\begin_inset Formula $\text{h.c.}$
\end_inset

 denotes 
\begin_inset Quotes eld
\end_inset

Hermitian conjugate
\begin_inset Quotes erd
\end_inset

 terms
\end_layout

\end_deeper
\begin_layout Itemize
Now, insert (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:InteractionPictureInteraction"

\end_inset

) into (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:Derivative_of_System_with_hc_01"

\end_inset

):
\begin_inset Formula 
\begin{align*}
\frac{d}{dt}\hat{\rho}_{S}\left(t\right) & =\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\left(\sum_{\alpha,\omega}e^{-i\omega\left(t-s\right)}\hat{A}_{\alpha}\left(\omega\right)B_{\alpha}\left(t-s\right)\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\left(\sum_{\beta,\omega^{\prime}}e^{-i\omega^{\prime}\left(t\right)}\hat{A}_{\beta}\left(\omega^{\prime}\right)B_{\beta}\left(t\right)\right)\\
 & \quad\qquad\qquad-\left(\sum_{\beta,\omega^{\prime}}e^{-i\omega^{\prime}\left(t\right)}\hat{A}_{\beta}\left(\omega^{\prime}\right)B_{\beta}\left(t\right)\right)\left(\sum_{\alpha,\omega}e^{-i\omega\left(t-s\right)}\hat{A}_{\alpha}\left(\omega\right)B_{\alpha}\left(t-s\right)\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\\
 & \quad\qquad\qquad+\text{h.c.}\bigg\}\\
 & =\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\left(\sum_{\alpha,\omega}e^{-i\omega\left(t-s\right)}\hat{A}_{\alpha}\left(\omega\right)B_{\alpha}\left(t-s\right)\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\left(\sum_{\beta,\omega^{\prime}}e^{-i\omega^{\prime}\left(t\right)}\hat{A}_{\beta}\left(\omega^{\prime}\right)B_{\beta}\left(t\right)\right)\\
 & \quad\qquad\qquad-\left(\sum_{\beta,\omega^{\prime}}e^{-i\omega^{\prime}\left(t\right)}\hat{A}_{\beta}\left(\omega^{\prime}\right)B_{\beta}\left(t\right)\right)\left(\sum_{\alpha,\omega}e^{-i\omega\left(t-s\right)}\hat{A}_{\alpha}\left(\omega\right)B_{\alpha}\left(t-s\right)\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\\
 & \quad\qquad\qquad+\text{h.c.}\bigg\}\\
 & =\frac{1}{\hbar^{2}}\int_{0}^{\infty}ds\,\text{tr}_{B}\,\bigg\{\hat{H}_{I}\left(t-s\right)\hat{\rho}_{S}\left(t\right)\hat{\rho}_{B}\hat{H}_{I}\left(t\right)
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
The time-evolution operator for the whole system is given by 
\begin_inset Formula $\hat{U}\left(t,t_{0}\right)$
\end_inset

 given by 
\end_layout

\begin_deeper
\begin_layout Itemize
Heisenberg picture
\end_layout

\begin_layout Itemize
Transformation operator.
 Define
\begin_inset Formula 
\[
\hat{U}\left(t,t_{0}\right)=T_{\leftarrow}\exp\left[-i\int_{t_{0}}^{t}ds\,\hat{H}\left(s\right)\right],
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Square root of a matrix
\begin_inset Formula 
\[
\hat{A}=\hat{P}^{-1}\hat{D}\hat{P}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
What is 
\begin_inset Formula $\hat{A}^{1/2}$
\end_inset

?
\end_layout

\begin_layout Itemize
Imagine that
\begin_inset Formula 
\[
\hat{A}^{\beta}=\hat{P}^{-1}\hat{D}^{\beta}\hat{P}
\]

\end_inset


\end_layout

\begin_layout Itemize
Then:
\begin_inset Formula 
\[
\hat{A}^{1/2}=\hat{P}^{-1}\hat{D}^{1/2}\hat{P}
\]

\end_inset


\end_layout

\begin_layout Itemize
Verify that 
\begin_inset Formula $\hat{A}=\left(\hat{A}^{1/2}\right)^{2}$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\left(\hat{A}^{1/2}\right)^{2} & =\hat{P}^{-1}\hat{D}^{1/2}\hat{P}\hat{P}^{-1}\hat{D}^{1/2}\hat{P}=\hat{P}^{-1}\hat{D}^{1/2}\hat{D}^{1/2}\hat{P}\\
 & =\hat{P}^{-1}\hat{D}\hat{P}\\
 & =\hat{A}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Section
Equations for Holstein's Molecular Crystal Model
\end_layout

\begin_layout Itemize
The wave function is a superposition
\begin_inset Formula 
\[
\psi\left(\mathbf{r},x_{1},\ldots,x_{N}\right)=\sum_{n}a_{n}\left(x_{1},\ldots,x_{N}\right)\phi\left(\mathbf{r}-n\mathbf{a},x_{n}\right)
\]

\end_inset

of electronic wave functions
\begin_inset Formula 
\[
\phi\left(\mathbf{r}-n\mathbf{a},x_{n}\right)
\]

\end_inset

localized at the 
\begin_inset Formula $n$
\end_inset

-th site with lattice vector 
\begin_inset Formula $\mathbf{a}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The weighting coefficients 
\begin_inset Formula $a_{n}\left(x_{1},\ldots,x_{N}\right)$
\end_inset

 are functions of all internuclear displacements
\end_layout

\end_deeper
\begin_layout Itemize
Apply tight-binding approximations to obtain:
\begin_inset Formula 
\begin{align*}
\Bigg[i\hbar\frac{\partial}{\partial t} & -\sum_{m}\left(-\frac{\hbar^{2}}{2M}\frac{\partial^{2}}{\partial x_{m}^{2}}+\frac{1}{2}M\omega_{0}^{2}x_{m}^{2}\right)-E\left(x_{n}\right)-W_{n}\left(x_{1},\ldots,x_{N}\right)\bigg]a_{n}\left(x_{1},\ldots,x_{N}\right)\\
 & =\sum_{\pm}J\left(x_{n},x_{n\pm1}\right)a_{n\pm1}\left(x_{1},\ldots,x_{N}\right)
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Terms
\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $E\left(x_{n}\right)$
\end_inset

 is the electron energy of an isolated molecular ion, the system of the
 electron and an isolated molecule
\end_layout

\begin_layout Itemize
\begin_inset Formula $W_{n}\left(x_{1},\ldots,x_{N}\right)$
\end_inset

 are perturbations on 
\begin_inset Formula $E\left(x_{n}\right)$
\end_inset

 due to the presence of other molecules
\end_layout

\begin_layout Itemize
\begin_inset Formula $J\left(x_{n},x_{n\pm1}\right)$
\end_inset

 are overlap integrals between sites 
\begin_inset Formula $n$
\end_inset

 and 
\begin_inset Formula $n\pm1$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Note: if internuclear coordinates all are forzen at 
\begin_inset Formula $x$
\end_inset

, then the system becomes equivalent to the tight-binding case
\end_layout

\begin_deeper
\begin_layout Itemize
Localized states 
\begin_inset Formula $\phi\left(\mathbf{r}-n\mathbf{a},x\right)$
\end_inset

 form a degenerate set
\end_layout

\begin_deeper
\begin_layout Itemize
By the translational symmetry of the system, stationary states take the
 form
\begin_inset Formula 
\[
a_{n}^{\left(k\right)}=e^{ikn}
\]

\end_inset

with eigenvalues
\begin_inset Formula 
\[
E_{k}=E\left(x\right)+W+\left(\frac{N}{2}\right)M\omega_{0}^{2}x^{2}-2J\cos k
\]

\end_inset


\end_layout

\begin_layout Itemize
Here, 
\begin_inset Formula $J\left(x_{n},x_{n\pm1}\right)$
\end_inset

 is set to a negative constant 
\begin_inset Formula $-J$
\end_inset

 and
\begin_inset Formula 
\[
W=W\left(x_{1},x_{2},\ldots,x_{N}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Group velocities are
\begin_inset Formula 
\[
V_{k}=\frac{a}{\hbar}\frac{\partial E_{k}}{\partial k}=-\frac{2Ja}{\hbar}\sin k
\]

\end_inset


\end_layout

\begin_layout Itemize
The system exhibits a typical band character, with band extrema at 
\begin_inset Formula $k=0,\pi$
\end_inset


\end_layout

\begin_layout Itemize
The motion may be described in terms of an effective mass
\begin_inset Formula 
\[
m^{\ast}=\left(\frac{a}{\hbar}\frac{\partial v_{k}}{\partial k}\right)^{-1}=\pm\frac{\hbar^{2}}{2Ja^{2}}
\]

\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Further approximations:
\end_layout

\begin_deeper
\begin_layout Itemize
Let 
\begin_inset Formula $W_{n}\left(x_{1},x_{2},\ldots,x_{N}\right)\sim0$
\end_inset

 (neglect these)
\end_layout

\begin_deeper
\begin_layout Itemize
When the electron is on site 
\begin_inset Formula $n$
\end_inset

, the perturbation of its expectation-energy due to the potential of other
 molecules is negligible
\end_layout

\end_deeper
\begin_layout Itemize
Neglect the 
\begin_inset Formula $x$
\end_inset

-dependence (or, perhaps, the 
\begin_inset Formula $n$
\end_inset

-dependence) of 
\begin_inset Formula $J\left(x_{n},x_{n\pm1}\right)$
\end_inset


\begin_inset Formula 
\[
J\left(x_{n},x_{n\pm1}\right)=-J
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
These energies are small relative to other energies found in the problem
\end_layout

\begin_layout Itemize
It is reasonable to ignore the 
\begin_inset Formula $x$
\end_inset

-dependence of 
\begin_inset Formula $J$
\end_inset

, at the outset, anyway.
\end_layout

\end_deeper
\begin_layout Itemize
Assume that the 
\begin_inset Formula $x$
\end_inset

-dependence of 
\begin_inset Formula $E\left(x_{n}\right)$
\end_inset

 is linear
\begin_inset Formula 
\[
E\left(x_{n}\right)=-Ax_{n}
\]

\end_inset


\end_layout

\begin_layout Itemize
Result:
\begin_inset Formula 
\begin{align}
\Bigg[i\hbar\frac{\partial}{\partial t} & -\sum_{m}\left(-\frac{\hbar^{2}}{2M}\frac{\partial^{2}}{\partial x_{m}^{2}}+\frac{1}{2}M\omega_{0}^{2}x_{m}^{2}\right)+Ax_{n}\bigg]a_{n}\left(x_{1},\ldots,x_{N}\right)\nonumber \\
 & +J\left(a_{n-1}+a_{n+1}\right)=0\label{eq:PolaronModelReduced}
\end{align}

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Large-polaron limit:
\end_layout

\begin_deeper
\begin_layout Itemize
Linear dimensions of polaron are large compared to lattice spacing
\end_layout

\begin_layout Itemize
The wave function 
\begin_inset Formula $a_{n}\left(x_{1},\ldots,x_{N}\right)$
\end_inset

 is a continuous, differentiable function of a continuous position variable:
\begin_inset Formula 
\[
a_{n+1}=a_{n}+\frac{\partial a_{n}}{\partial n}+\frac{1}{2}\frac{\partial^{2}a_{n}}{\partial n^{2}}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
A stationary equivalent
\begin_inset Formula 
\begin{align}
E\left(x_{1},\ldots,x_{N}\right)a_{n}\left(x_{1},\ldots,x_{N}\right)=\frac{1}{2} & \sum_{m}\left(M\omega_{0}^{2}x_{m}^{2}-Ax_{n}\right)\bigg]a_{n}\left(x_{1},\ldots,x_{N}\right)\nonumber \\
 & -J\left(a_{n-1}+a_{n+1}\right)\label{eq:PolaronModelReducedStationary}
\end{align}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Here, we neglect the vibrational kinetic energy
\end_layout

\end_deeper
\begin_layout Itemize
Now we have energy eigenvalue 
\begin_inset Formula $E\left(x_{1},\ldots,x_{N}\right)$
\end_inset

 which is a parametric function of vibration coordinates 
\begin_inset Formula $\left\{ x_{n}\right\} $
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Itemize
We seek the 
\begin_inset Formula $\left\{ x_{n}\right\} $
\end_inset

 that minimize 
\begin_inset Formula $E\left(x_{1},\ldots,x_{N}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Multiply (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:PolaronModelReducedStationary"

\end_inset

) by 
\begin_inset Formula $a_{n}^{\ast}$
\end_inset

 and sum over 
\begin_inset Formula $n$
\end_inset

:
\begin_inset Formula 
\begin{align}
E\left(x_{1},\ldots,x_{N}\right)= & \frac{1}{2}\sum_{m}M\omega_{0}^{2}x_{m}^{2}-\sum_{n}Ax_{n}\left|a_{n}\right|^{2}\nonumber \\
 & +\sum_{n}J\left(a_{n-1}+a_{n+1}\right)a_{n}^{\ast}\label{eq:PolaronModelReducedStationarySoln}
\end{align}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The normalization condition has been used
\begin_inset Formula 
\[
\sum_{n}\left|a_{n}\right|^{2}=1
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Differentiate (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:PolaronModelReducedStationarySoln"

\end_inset

) with respect to a given vibrational coordinate, 
\begin_inset Formula $x_{p}$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\frac{\partial E\left(x_{1},\ldots,x_{N}\right)}{\partial x_{p}} & =M\omega_{0}^{2}x_{p}-A\left|a_{p}\right|^{2}\\
 & \quad+\sum_{n}\frac{\partial a_{n}^{\ast}}{\partial x_{p}}\left[-Ax_{n}a_{n}-J\left(a_{n-1}+a_{n+1}\right)+\lambda a_{n}\right]\\
 & \quad+\sum_{n}\frac{\partial a_{n}}{\partial x_{p}}\left[-Ax_{n}a_{n}^{\ast}-J\left(a_{n-1}^{\ast}+a_{n+1}^{\ast}\right)+\lambda a_{n}^{\ast}\right]
\end{align*}

\end_inset


\end_layout

