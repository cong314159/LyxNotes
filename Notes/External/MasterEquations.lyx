\begin_layout Itemize
We define 
\begin_inset Formula $\hat{A}_{\text{H}}$
\end_inset

 as a Heisenberg operator, a transformation of the Schrdinger-picture operator
\begin_inset Formula 
\[
\hat{A}_{\text{H}}\left(t\right)=\hat{U}\left(t,t_{0}\right)\hat{H}\left(t\right)\hat{U}^{\dagger}\left(t,t_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
In the Heisenberg picture, we define the Heisenberg density operator 
\begin_inset Formula $\hat{\rho}_{H}$
\end_inset

:
\begin_inset Formula 
\[
\hat{\rho}_{H}=\hat{\rho}\left(t_{0}\right)=\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{\rho}\left(t\right)\hat{U}\left(t,t_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Heisenberg operators 
\begin_inset Formula $\hat{A}_{H}$
\end_inset

 contain the time dependence, while the density matrix 
\begin_inset Formula $\hat{\rho}_{H}$
\end_inset

 is constant:
\begin_inset Formula 
\begin{equation}
\hat{A}_{H}\left(t\right)=\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\hat{U}\left(t,t_{0}\right)\label{eq:HeisenbergOperator}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
The expectation value of an observable is:
\begin_inset Formula 
\begin{align*}
\braket{\hat{A}} & =\text{Tr}\,\left\{ \hat{A}\hat{\rho}\left(t\right)\right\} =\text{Tr}\,\left\{ \hat{A}\hat{U}\left(t,t_{0}\right)\hat{\rho}\left(t_{0}\right)\hat{U}^{\dagger}\left(t,t_{0}\right)\right\} \\
 & =\text{Tr}\,\left\{ \hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\hat{U}\left(t,t_{0}\right)\hat{\rho}\left(t_{0}\right)\right\} \\
 & =\text{Tr}\,\left\{ \hat{A}_{H}\left(t\right)\hat{\rho}_{H}\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Take the derivative of Eqn.
 (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:HeisenbergOperator"

\end_inset

)
\begin_inset Formula 
\begin{align*}
\frac{d}{dt}\hat{A}_{H}\left(t\right) & =\frac{d}{dt}\left[\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\left(t\right)\hat{U}\left(t,t_{0}\right)\right]\\
 & =\left[\frac{d}{dt}\hat{U}^{\dagger}\left(t,t_{0}\right)\right]\hat{A}\left(t\right)\hat{U}\left(t,t_{0}\right)+\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\left(t\right)\left[\frac{d}{dt}\hat{U}\left(t,t_{0}\right)\right]+\hat{U}^{\dagger}\left(t,t_{0}\right)\frac{\partial}{\partial t}\hat{A}\left(t\right)\hat{U}\left(t,t_{0}\right)\\
 & =\frac{i}{\hbar}\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{H}\hat{A}\hat{U}\left(t,t_{0}\right)-\frac{i}{\hbar}\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\hat{H}\hat{U}\left(t,t_{0}\right)+\frac{\partial\hat{A}_{H}\left(t\right)}{\partial t}\\
 & =\frac{i}{\hbar}\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{H}\hat{U}\left(t,t_{0}\right)\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\hat{U}\left(t,t_{0}\right)-\frac{i}{\hbar}\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{A}\hat{U}\left(t,t_{0}\right)\hat{U}^{\dagger}\left(t,t_{0}\right)\hat{H}\hat{U}\left(t,t_{0}\right)+\frac{\partial\hat{A}_{H}\left(t\right)}{\partial t}\\
 & =\frac{i}{\hbar}\left[\hat{H}_{S},\hat{A}_{S}\right]+\frac{\partial\hat{A}_{H}\left(t\right)}{\partial t}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Expectation value:
\begin_inset Formula 
\[
\frac{d}{dt}\Braket{\hat{A}_{H}\left(t\right)}=\Braket{\frac{d}{dt}\hat{A}_{H}}=\mbox{tr}\,\left\{ \left(\frac{i}{\hbar}\left[\hat{H}_{S},\hat{A}_{S}\right]+\frac{\partial\hat{A}_{H}\left(t\right)}{\partial t}\right)\hat{\rho}_{H}\left(t_{0}\right)\right\} 
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
This is the Ehrenfest equation
\end_layout

\begin_deeper
\begin_layout Itemize
The time derivative of an expectation value is the same as the expectation
 value of the corresponding Heisengberg-pict ur observable operator 
\begin_inset Formula $\hat{A}_{H}\left(t\right)$
\end_inset


\end_layout

\end_deeper
\end_deeper
