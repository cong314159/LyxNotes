\begin_deeper
\begin_layout Itemize
Electronic Hamiltonian 
\begin_inset Formula $\hat{H}_{e}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{e}=\varepsilon_{D}\ket{D}\bra{D}+\varepsilon_{A}\ket{A}\bra{A}=\varepsilon_{D}\hat{P}_{D}+\varepsilon_{A}\hat{P}_{A}
\]

\end_inset


\begin_inset Formula $\hat{{P}}$
\end_inset

 is the projection operator here.
\end_layout

\begin_layout Itemize
Hamiltonian describing chirality 
\begin_inset Formula $\hat{{H}}_{o}$
\end_inset

:
\begin_inset Formula 
\[
\hat{{H}}_{o}=-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Detuning 
\begin_inset Formula $\omega_{z}$
\end_inset


\end_layout

\begin_layout Itemize
Tunneling 
\begin_inset Formula $\delta$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Environmental Hamiltonian 
\begin_inset Formula $\hat{H}_{E}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{E}=\sum_{i}\omega_{i}\hat{b}_{i}^{\dagger}\hat{b}_{i}
\]

\end_inset


\end_layout

\begin_layout Itemize
The interaction term 
\begin_inset Formula $\hat{H}_{int}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{int}=\Delta(\ket{A}\bra{D}+\ket{D}\bra{A})+(\gamma_{D}\ket{D}\bra{D}+\gamma_{A}\ket{A}\bra{A})\hat{\delta}_{x}+\sum_{i}(\gamma_{iD}\ket{D}\bra{D}+\gamma_{iA}\ket{A}\bra{A})(\hat{b}_{i}^{\dagger}+\hat{b}_{i})
\]

\end_inset


\begin_inset Formula 
\[
=\Delta(\hat{P}_{AD}+\hat{P}_{DA})+(\gamma_{D}\hat{P}_{D}+\gamma_{A}\hat{P}_{A})\hat{\delta}_{x}+\sum_{i}(\gamma_{iD}\hat{P}_{D}+\gamma_{iA}\hat{P}_{A})(\hat{b}_{i}^{\dagger}+\hat{b}_{i})
\]

\end_inset


\end_layout

\end_deeper
