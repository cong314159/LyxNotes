\begin_body

\begin_layout Itemize
Model
\end_layout

\begin_deeper
\begin_layout Itemize
Begin with free Hamiltonian
\begin_inset Formula 
\[
\hat{H}_{0}=\hat{H}_{o}+\hat{H}_{e}+\hat{H}_{E}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Electronic Hamiltonian 
\begin_inset Formula $\hat{H}_{e}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{e}=\varepsilon_{D}\ket{D}\bra{D}+\varepsilon_{A}\ket{A}\bra{A}=\varepsilon_{D}\hat{P}_{D}+\varepsilon_{A}\hat{P}_{A}
\]

\end_inset


\begin_inset Formula $\hat{{P}}$
\end_inset

 is the projection operator here.
\end_layout

\begin_layout Itemize
Hamiltonian describing chirality 
\begin_inset Formula $\hat{{H}}_{o}$
\end_inset

:
\begin_inset Formula 
\[
\hat{{H}}_{o}=-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Detuning 
\begin_inset Formula $\omega_{z}$
\end_inset


\end_layout

\begin_layout Itemize
Tunneling 
\begin_inset Formula $\delta$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Environmental Hamiltonian 
\begin_inset Formula $\hat{H}_{E}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{E}=\sum_{i}\omega_{i}\hat{b}_{i}^{\dagger}\hat{b}_{i}
\]

\end_inset


\end_layout

\begin_layout Itemize
The interaction term 
\begin_inset Formula $\hat{H}_{int}$
\end_inset

:
\begin_inset Formula 
\[
\hat{H}_{int}=\Delta(\ket{A}\bra{D}+\ket{D}\bra{A})+(\gamma_{D}\ket{D}\bra{D}+\gamma_{A}\ket{A}\bra{A})\hat{\delta}_{x}+\sum_{i}(\gamma_{iD}\ket{D}\bra{D}+\gamma_{iA}\ket{A}\bra{A})(\hat{b}_{i}^{\dagger}+\hat{b}_{i})
\]

\end_inset


\begin_inset Formula 
\[
=\Delta(\hat{P}_{AD}+\hat{P}_{DA})+(\gamma_{D}\hat{P}_{D}+\gamma_{A}\hat{P}_{A})\hat{\delta}_{x}+\sum_{i}(\gamma_{iD}\hat{P}_{D}+\gamma_{iA}\hat{P}_{A})(\hat{b}_{i}^{\dagger}+\hat{b}_{i})
\]

\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Itemize
Polaron Transformation
\end_layout

\begin_deeper
\begin_layout Itemize
Unitary polaron transformation 
\begin_inset Formula $\hat{U}$
\end_inset

:
\begin_inset Formula 
\[
\hat{U}=exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset

where
\begin_inset Formula 
\[
\lambda=tan^{-1}\left(\frac{\delta-\gamma_{D}}{\omega_{z}}\right)
\]

\end_inset


\begin_inset Formula 
\[
\lambda=tan^{-1}\left(\frac{\delta+\gamma_{A}}{\omega_{z}}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Apply the unitary polaron transformation to the free Hamiltonian:
\begin_inset Formula 
\[
\tilde{H}_{0}=\hat{U}^{\dagger}\left(\hat{H}_{o}+\hat{H}_{e}+\hat{H}_{E}\right)\hat{U}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
First deal with 
\begin_inset Formula $\hat{U}^{\dagger}\hat{H}_{e}\hat{U}$
\end_inset

:
\begin_inset Formula 
\[
\hat{U}^{\dagger}\hat{H}_{e}\hat{U}=exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\left(\varepsilon_{D}\hat{P}_{D}+\varepsilon_{A}\hat{P}_{A}\right)exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\varepsilon_{D}\hat{P}_{D}$
\end_inset

 acts to the right:
\begin_inset Formula 
\[
\varepsilon_{D}\hat{P}_{D}exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset

note the matrix exponential expansion:
\begin_inset Formula 
\[
expm(A)=\sum_{k=0}^{\infty}\frac{1}{k!}A^{k}
\]

\end_inset

note also that 
\begin_inset Formula $\hat{P}_{D}\hat{P}_{A}=0$
\end_inset

 and 
\begin_inset Formula $\hat{P}_{D}\hat{P}_{D}=\hat{P}_{D}$
\end_inset

, then:
\begin_inset Formula 
\[
\varepsilon_{D}\hat{P}_{D}exp\left[\frac{i}{2}\lambda'\hat{P}_{D}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\varepsilon_{A}\hat{P}_{A}$
\end_inset

 acts to the right:
\begin_inset Formula 
\[
\varepsilon_{A}\hat{P}_{A}exp\left[-\frac{i}{2}\lambda\hat{P}_{A}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Similarly, 
\begin_inset Formula $\hat{U}^{\dagger}$
\end_inset

's terms will be selected.
\begin_inset Formula 
\[
exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\varepsilon_{D}\hat{P}_{D}exp\left[\frac{i}{2}\lambda'\hat{P}_{D}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\begin_inset Formula 
\[
=exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D})\hat{\delta}_{y}\right]\varepsilon_{D}\hat{P}_{D}exp\left[\frac{i}{2}\lambda'\hat{P}_{D}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\begin_inset Formula 
\[
=\varepsilon_{D}\hat{P}_{D}
\]

\end_inset

and
\begin_inset Formula 
\[
exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\varepsilon_{A}\hat{P}_{A}exp\left[-\frac{i}{2}\lambda\hat{P}_{A}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\begin_inset Formula 
\[
exp\left[\sum_{i}\left(\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[\frac{i}{2}\lambda\hat{P}_{A}\hat{\delta}_{y}\right]\varepsilon_{A}\hat{P}_{A}exp\left[-\frac{i}{2}\lambda\hat{P}_{A}\hat{\delta}_{y}\right]exp\left[\sum_{i}\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset


\begin_inset Formula 
\[
=\varepsilon_{A}\hat{P}_{A}
\]

\end_inset


\end_layout

\begin_layout Itemize
Thus,
\begin_inset Formula 
\[
\hat{U}^{\dagger}\hat{H}_{e}\hat{U}=\hat{H}_{e}
\]

\end_inset


\end_layout

\begin_layout Itemize
Next, deal with 
\begin_inset Formula $\hat{U}^{\dagger}\hat{H}_{o}\hat{U}$
\end_inset

:
\begin_inset Formula 
\[
\hat{U}^{\dagger}\hat{H}_{o}\hat{U}=exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(-\hat{b}_{i}^{\dagger}+\hat{b}_{i})\right]exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\left(-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}\right)exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]exp\left[\sum_{i}\left(\frac{\gamma_{iD}}{\omega_{i}}\hat{P}_{D}+\frac{\gamma_{iA}}{\omega_{i}}\hat{P}_{A}\right)(\hat{b}_{i}^{\dagger}-\hat{b}_{i})\right]
\]

\end_inset

start with:
\begin_inset Formula 
\[
exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\left(-\frac{\delta}{2}\hat{\sigma}_{x}-\frac{\omega_{z}}{2}\hat{\sigma}_{z}\right)exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]
\]

\end_inset


\begin_inset Formula 
\[
=-exp\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]\left(\frac{\delta}{2}\hat{\sigma}_{x}+\frac{\omega_{z}}{2}\hat{\sigma}_{z}\right)exp\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]
\]

\end_inset


\begin_inset Formula 
\[
=-\frac{1}{2}\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} \left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} 
\]

\end_inset

Focus on 
\begin_inset Formula $\delta\hat{\sigma}_{x}\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} $
\end_inset

:
\begin_inset Formula 
\[
\delta\hat{\sigma}_{x}\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} =\delta\sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}\hat{\sigma}_{y}^{k}
\]

\end_inset

Then focus on 
\begin_inset Formula $\hat{\sigma}_{x}\hat{\sigma}_{y}^{k}$
\end_inset

:
\begin_inset Formula 
\[
\hat{\sigma}_{x}\hat{\sigma}_{y}^{k}=\hat{\sigma}_{x}\hat{\sigma}_{y}\hat{\sigma}_{y}^{k-1}=i\hat{\sigma}_{z}\hat{\sigma}_{y}^{k-1}=i\hat{\sigma}_{z}\hat{\sigma}_{y}\hat{\sigma}_{y}^{k-2}=\hat{\sigma}_{x}\hat{\sigma}_{y}^{k-2}\left(=(-1)^{k}\hat{\sigma}_{y}^{k}\hat{\sigma}_{x}\right)
\]

\end_inset

In the summation, whenever we have even number of 
\begin_inset Formula $\hat{\sigma}_{y}$
\end_inset

, 
\begin_inset Formula $\hat{\sigma}_{x}$
\end_inset

 remains; whenever we have odd number of 
\begin_inset Formula $\hat{\sigma}_{y}$
\end_inset

, 
\begin_inset Formula $i\hat{\sigma}_{z}$
\end_inset

 remains.
 Then:
\begin_inset Formula 
\[
=\delta\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}+\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}i\hat{\sigma}_{z}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\delta\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}+i\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}\right\} 
\]

\end_inset

Continue to the next part 
\begin_inset Formula $\omega_{z}\hat{\sigma}_{z}\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} $
\end_inset

:
\begin_inset Formula 
\[
\omega_{z}\hat{\sigma}_{z}\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\sigma}_{y}\right]^{k}\right\} =\omega_{z}\sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}\hat{\sigma}_{y}^{k}
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}+\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}(-i\hat{\sigma}_{x})\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}-i\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
Two approaches from here, either go with Taylor expansion, or go with commute
 
\begin_inset Formula $\hat{\sigma}$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
Taylor expansion.
\end_layout

\begin_deeper
\begin_layout Enumerate
The Taylor expansion of 
\begin_inset Formula $sinh(x)$
\end_inset

 and 
\begin_inset Formula $cosh(x)$
\end_inset

:
\begin_inset Formula 
\[
sinh(x)=\sum_{n=0}^{\infty}\frac{x^{2n+1}}{(2n+1)!}
\]

\end_inset


\begin_inset Formula 
\[
cosh(x)=\sum_{n=0}^{\infty}\frac{x^{2n}}{(2n)!}
\]

\end_inset

Continue:
\begin_inset Formula 
\[
=\delta\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}+i\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\delta\left\{ \sum_{k=0}^{\infty}\frac{1}{(2k)!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{x}+i\sum_{k=0}^{\infty}\frac{1}{\left(2k+1\right)!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k+1}\hat{\sigma}_{z}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\delta\left\{ cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\sigma_{x}+isinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\sigma_{z}\right\} 
\]

\end_inset

Second part:
\begin_inset Formula 
\[
=\omega_{z}\left\{ \sum_{k=0,2,4...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{z}-i\sum_{k=1,3,5...}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{x}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\left\{ \sum_{k=0}^{\infty}\frac{1}{\left(2k\right)!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{z}-i\sum_{k=0}^{\infty}\frac{1}{\left(2k+1\right)!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{\left(2k+1\right)}\hat{\sigma}_{x}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\left\{ cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\sigma_{z}-isinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\sigma_{x}\right\} 
\]

\end_inset

Then:
\begin_inset Formula 
\[
\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} =\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

Continue:
\begin_inset Formula 
\[
\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} \left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} \left\{ \left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\right\} 
\]

\end_inset

Split the terms into two parts
\begin_inset Formula 
\begin{equation}
\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\label{Part I}
\end{equation}

\end_inset

and
\begin_inset Formula 
\begin{equation}
\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\label{Part II}
\end{equation}

\end_inset

Part I and Part II will be summed.
 From Part I:
\begin_inset Formula 
\[
\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} \delta\hat{\sigma}_{x}=\delta\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{y}^{k}\hat{\sigma}_{x}
\]

\end_inset


\begin_inset Formula 
\[
=\delta\left\{ \sum_{k=0}^{\infty}\frac{1}{(2k)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{x}-i\sum_{k=0}^{\infty}\frac{1}{(2k+1)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k+1}\hat{\sigma}_{z}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\delta\hat{\sigma}_{x}cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\delta\hat{\sigma}_{z}sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

and:
\begin_inset Formula 
\[
\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} \omega_{z}\hat{\sigma}_{z}=\omega_{z}\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\sigma}_{y}^{k}\hat{\sigma}_{z}
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\left\{ \sum_{k=0}^{\infty}\frac{1}{(2k)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{z}+i\sum_{k=0}^{\infty}\frac{1}{(2k+1)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k+1}\hat{\sigma}_{x}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=\omega_{z}\hat{\sigma}_{z}cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]-i\omega_{z}\hat{\sigma}_{x}sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

Then Part I:
\begin_inset Formula 
\[
\left\{ \left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\right\} cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

From Part II:
\begin_inset Formula 
\[
\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} i\delta\hat{\sigma}_{z}=i\delta\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\delta}_{y}^{k}\hat{\sigma}_{z}
\]

\end_inset


\begin_inset Formula 
\[
=i\delta\left\{ \sum_{k=0}^{\infty}\frac{1}{\left(2k\right)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{z}+i\sum_{k=0}^{\infty}\frac{1}{(2k+1)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k+1}\hat{\sigma}_{x}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=i\delta\hat{\sigma}_{z}cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+\delta\hat{\sigma}_{x}sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset


\begin_inset Formula 
\[
-\left\{ \sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\hat{\delta}_{y}\right]^{k}\right\} i\omega_{z}\hat{\sigma}_{x}=-i\omega_{z}\sum_{k=0}^{\infty}\frac{1}{k!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{k}\hat{\delta}_{y}^{k}\hat{\sigma}_{x}
\]

\end_inset


\begin_inset Formula 
\[
=-i\omega_{z}\left\{ \sum_{k=0}^{\infty}\frac{1}{(2k)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k}\hat{\sigma}_{x}-i\sum_{k=0}^{\infty}\frac{1}{(2k+1)!}\left[-\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]^{2k+1}\hat{\sigma}_{z}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
=-i\omega_{z}\hat{\sigma}_{x}cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+\omega_{z}\hat{\sigma}_{z}sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

Then Part II:
\begin_inset Formula 
\[
\left\{ i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]\right\} sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

Part I and Part II together:
\begin_inset Formula 
\[
\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cosh^{2}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+i\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)cosh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]sinh\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]+\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)sinh^{2}\left[\frac{i}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset

From the identity of hyperbolic function:
\begin_inset Formula 
\[
\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cos^{2}\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]-\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sin\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]cos\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]-\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)cos\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]sin\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]-\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)sin^{2}\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset


\begin_inset Formula 
\[
\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)cos^{2}\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]-\left(\delta\hat{\sigma}_{z}-\omega_{z}\hat{\sigma}_{x}\right)sin(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})-\left(\delta\hat{\sigma}_{x}+\omega_{z}\hat{\sigma}_{z}\right)sin^{2}\left[\frac{1}{2}(\lambda'\hat{P}_{D}-\lambda\hat{P}_{A})\right]
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
Cummute 
\begin_inset Formula $\hat{\sigma}$
\end_inset

.
\end_layout

